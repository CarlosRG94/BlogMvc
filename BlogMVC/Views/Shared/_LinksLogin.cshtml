@using Microsoft.AspNetCore.Identity
@using BlogMVC.Entidades
@inject SignInManager<Usuario> SignInManager

<ul class="navbar-nav ms-auto align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item me-3">
            <span class="nav-link text-white mb-0">Hola, @User.Identity.Name</span>
        </li>
         <li class="nav-item">
            <form class="d-inline m-0 p-0" asp-action="logout" asp-controller="usuarios">
                <button type="submit" class="btn-logout">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item me-2">
            <a class="nav-link text-white" asp-controller="usuarios" asp-action="Registro">Registro</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="usuarios" asp-action="Login">Login</a>
        </li>
    }
</ul>

